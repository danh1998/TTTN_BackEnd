<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title d-inline">Slider</h4>
            <a href="/admin/user/create" class="btn btn-gradient-success btn-fw float-right">Add User</a>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th style="width:5%"> Id </th>
                        <th style="width:20%"> Name </th>
                        <th style="width:10%"> User Name </th>
                        <th style="width:10%"> Role </th>
                        <th style="width:15%"> Date Create </th>
                        <th style="width:10%"> Creator </th>
                        <th style="width:25%"> </th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach((el,index) => { %>
                    <tr>
                        <td><%= index + 1 %> </td>
                        <td><%= el.name %> </td>
                        <td><%= el.username %> </td>
                        <td><%= el.role %> </td>
                        <td><%= el.dateCreate.toDateString() %> </td>
                        <td><%= el.creator %> </td>
                        <td>
                        <td>
                            <a href="/admin/user/edit/<%= el._id %>" class="btn btn-gradient-info btn-fw">Edit</a>
                            <a href="/admin/user/delete/<%= el._id %>"
                                class="btn btn-gradient-danger  btn-fw">Delete</a>
                        </td>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
        <ul class="pagination justify-content-center">
            <% if(currentPage > 1){ %>
            <li class="page-item"><a class="page-link" href="/admin/user?page=<%= +currentPage - 1 %>">Previous</a></li>
            <% } %>
            <% for(let i=1; i <= totalPage; i++){ %>
            <li class="page-item"><a class="page-link" href="/admin/user?page=<%= i %>"><%= i %> </a></li>
            <% } %>
            <% if(currentPage < totalPage){ %>
            <li class="page-item"><a class="page-link" href="/admin/user?page=<%= +currentPage + 1 %>">Next</a></li>
            <% } %>
        </ul>
    </div>

</div>