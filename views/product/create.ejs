<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Brand Form</h4>
            <form action="/admin/product/create" class="forms-sample" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="exampleInputName1">Name</label>
                    <input required minlength="5" name="name" id="name" type="text" class="form-control"
                        placeholder="Name">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Title</label>
                    <input required minlength="5" name="title" id="title" type="text" class="form-control"
                        placeholder="Title">
                </div>
                <div class="form-group">
                    <label class="d-block">Logo upload</label>
                    <input required type="file" name="logo-product">
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Brand List</label>
                    <div class="col-sm-9">
                        <select name="brand" id="brand" required class="form-control">
                            <% brandList.forEach(element => { %>
                            <option value=<%= element.title %>><%= element.title %></option>
                            <% }); %>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Type List</label>
                    <div class="col-sm-9">
                        <select name="type" id="type" required class="form-control">
                            <option selected value="nam">Nam</option>
                            <option value="nu">Nữ</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Price</label>
                    <input required name="price" id="price" type="number" class="form-control" placeholder="Price">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Guarantee</label>
                    <input required name="guarantee" id="guarantee" type="number" class="form-control"
                        placeholder="Guarantee">
                </div>
                <div class="form-group row">
                    <div class="col-12">
                        <h3>Information Describe</h3>
                    </div>
                    <div class="col-6">
                        <label for="exampleInputName1">Loại Kính</label>
                        <input name="loaikinh" id="loaikinh" type="text" class="form-control">
                    </div>
                    <div class="col-6">
                        <label for="exampleInputName1">Máy</label>
                        <input name="may" id="may" type="text" class="form-control">
                    </div>
                    <div class="col-6">
                        <label for="exampleInputName1">Chất Liệu Dây</label>
                        <input name="chatlieuday" id="chatlieuday" type="text" class="form-control">
                    </div>
                    <div class="col-6">
                        <label for="exampleInputName1">Màu Mặt Số</label>
                        <input name="maumatso" id="maumatso" type="text" class="form-control">
                    </div>
                    <div class="col-6">
                        <label for="exampleInputName1">Đường Kính</label>
                        <input name="duongkinh" id="duongkinh" type="text" class="form-control">
                    </div>
                    <div class="col-6">
                        <label for="exampleInputName1">Độ Dày</label>
                        <input name="doday" id="doday" type="text" class="form-control">
                    </div>
                    <div class="col-6">
                        <label for="exampleInputName1">Màu Dây</label>
                        <input name="mauday" id="mauday" type="text" class="form-control">
                    </div>
                    <div class="col-6">
                        <label for="exampleInputName1">Niềng</label>
                        <input name="nieng" id="nieng" type="text" class="form-control">
                    </div>
                    <div class="col-6">
                        <label for="exampleInputName1">Chịu Nước</label>
                        <input name="chiunuoc" id="chiunuoc" type="text" class="form-control">
                    </div>
                    <div class="col-6">
                        <label for="exampleInputName1">Chức Năng</label>
                        <input name="chucnang" id="chucnang" type="text" class="form-control">
                    </div>
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Chính sách bảo hành</label>
                    <textarea name="warrantypolicy" id="warrantyPolicy" cols="100" rows="10"></textarea>
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Số lượng</label>
                    <input name="amount" id="amount" type="number" value="1" min="0" class="form-control">
                </div>
                <div class="form-check form-check-flat form-check-primary">
                    <label class="form-check-label">
                        <input type="checkbox" name="isHide" class="form-check-input"> Is Hide <i
                            class="input-helper"></i></label>
                </div>
                <button type="submit" class="btn btn-gradient-primary mr-2">Submit</button>
                <a href="/admin/product" class="btn btn-light">Cancel</a>
            </form>
        </div>
    </div>
</div>