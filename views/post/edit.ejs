<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Post Form</h4>
            <form action="/admin/post/edit/<%=post._id%>" class="forms-sample" method="POST">
                <div class="form-group">
                    <label for="exampleInputName1">Title</label>
                    <input required minlength="5" name="title" id="title" type="text" class="form-control"
                        placeholder="Title" value='<%=post.title%>'>
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Content Sub</label>
                    <br>
                    <textarea name="contentSub" id="exampleInputName1" cols="100"
                        rows="10"><%-post.contentSub%></textarea>
                </div>
                <div class="form-group">
                    <label for="content">Content</label>
                    <textarea name="content" id="content" cols="100" rows="10"><%-post.content%></textarea>
                </div>
                <div class="form-check form-check-flat form-check-primary">
                    <label class="form-check-label">
                        <input type="checkbox" name="isHide" <% if(post.isHide){ %> <%= 'checked' %> <% } %>
                            class="form-check-input"> Is Hide <i class="input-helper"></i></label>
                </div>
                <button type="submit" class="btn btn-gradient-primary mr-2">Submit</button>
                <a href="/admin/post" class="btn btn-light">Cancel</a>
            </form>
        </div>
    </div>
</div>