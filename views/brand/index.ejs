<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title d-inline">Brand</h4>
            <a href="/admin/brand/create" class="btn btn-gradient-success btn-fw float-right">Add Brand</a>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th style="width:5%"> Id </th>
                        <th style="width:40%"> Title </th>
                        <th style="width:20%"> Date Create </th>
                        <th style="width:10%"> Creator </th>
                        <th style="width:5%"> IsHide </th>
                        <th style="width:20%"> </th>
                    </tr>
                </thead>
                <tbody>
                    <% brandList.forEach((el,index) => { %>
                    <tr>
                        <td><%= index + 1%>
                        </td>
                        <td><%= el.title %></td>
                        <td> <%= el.dateCreate.toDateString() %> </td>
                        <td> <%= el.creator %> </td>
                        <td> <%= el.isHide %> </td>
                        <td>
                            <a href="/admin/brand/edit/<%= el._id %>" class="btn btn-gradient-info btn-fw">Edit</a>
                            <a href="/admin/brand/delete/<%= el._id %>"
                                class="btn btn-gradient-danger  btn-fw">Delete</a>
                        </td>
                    </tr>
                    <% }); %>

                </tbody>
            </table>
        </div>
        <ul class="pagination justify-content-center">
            <li class="page-item"><a class="page-link" href="#">Previous</a></li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#">Next</a></li>
        </ul>
    </div>

</div>