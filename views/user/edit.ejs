<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Brand Form</h4>
            <form action="/admin/user/edit/<%= user._id %>" class="forms-sample" method="POST">
                <div class="form-group">
                    <label for="exampleInputName1">Name</label>
                    <input required value="<%= user.name %>" minlength="5" name="name" id="name" type="text"
                        class="form-control" placeholder="Title">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Username</label>
                    <input required minlength="5" value="<%= user.username %>" name="username" id="username" type="text"
                        class="form-control" placeholder="Title">
                </div>
                <!-- <div class="form-group">
                    <label for="exampleInputName1">Password</label>
                    <input required minlength="5" name="password" id="password" type="password" class="form-control"
                        placeholder="Title">
                </div> -->
                <div class="form-group">
                    <label for="exampleInputName1">Email</label>
                    <input minlength="5" value="<%= user.email %>" name="email" id="email" type="email"
                        class="form-control" placeholder="Title">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Phone</label>
                    <input value="<%= user.phone %>" required minlength="1" maxlength="10" name="phone" id="phone"
                        type="text" class="form-control" placeholder="Title">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Address</label>
                    <input value="<%= user.address %>" required minlength="5" name="address" id="address" type="text"
                        class="form-control" placeholder="Title">
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Role</label>
                    <div class="col-sm-9">
                        <select class="form-control" name="role">
                            <% roles.forEach(element => { %>
                            <option <% if(element.name == user.role){ %> <%= 'selected' %> <% } %>
                                value="<%=element.name%>"><%=element.name%></option>
                            <% }); %>
                        </select>
                    </div>
                </div>
                <button type="submit" class="btn btn-gradient-primary mr-2">Submit</button>
                <a href="/admin/user" class="btn btn-light">Cancel</a>
            </form>
        </div>
    </div>
</div>